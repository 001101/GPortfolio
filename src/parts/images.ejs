<%
/*
* Properties:
*  - Include: avatar, background, defaultBackground
*/

const assetFolder = require.context('@asset', true, /\.gif|png|jpe?g|svg/)

let backgroundFile
if (typeof background !== 'undefined') {
    backgroundFile = !background || background.includes('http')
            ? background
            : assetFolder(`./${background}`)
}
%>

<style>
<% if (typeof avatar !== 'undefined' && avatar) { %>
.avatar--image {
    background: url(<%= avatar %>);
}
<% } %>
<% if (backgroundFile || typeof defaultBackground !== 'undefined') { %>
.background--image {
    background: url(<%= backgroundFile || defaultBackground %>);
}
<% } %>
</style>
